<?xml version="1.0" encoding="UTF-8"?>
<executable>
  <category>TubeTK</category>
  <title>Convert Tubes to Surface (TubeTK)</title>
  <description>Renders ITK tube SpatialObject data structures into polygons representing the wall of the tubes. The .vtk and .stl file formats are supported.</description>
  <version>0.1.0.$Revision: 2104 $(alpha)</version>
  <documentation-url>http://public.kitware.com/Wiki/TubeTK</documentation-url>
  <license>Apache 2.0</license>
  <contributor>Matthew McCormick (Kitware)</contributor>
  <acknowledgements>This work is part of the TubeTK project at Kitware.</acknowledgements>
  <parameters>
    <label>IO</label>
    <description>Input/output parameters.</description>
    <file>
      <name>inputTubeFile</name>
      <label>Input Tube File</label>
      <index>0</index>
      <channel>input</channel>
      <description>File containing the input tubes.</description>
    </file>
    <file>
      <name>outputSurfaceFile</name>
      <label>Output Surface File</label>
      <index>1</index>
      <channel>input</channel>
      <description>File to place the rendered tube wall.</description>
    </file>
    <geometry>
      <name>outputCenterline</name>
      <label>Centerline</label>
      <description><![CDATA[Output centerline]]></description>
      <channel>output</channel>
      <longflag>centerline</longflag>
    </geometry>
  </parameters>
</executable>
