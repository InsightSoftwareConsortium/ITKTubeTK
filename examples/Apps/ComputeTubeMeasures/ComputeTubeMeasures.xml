<?xml version="1.0" encoding="UTF-8"?>
<executable>
  <category>TubeTK</category>
  <title>Compute tube measures (TubeTK)</title>
  <description>Returns the ridgeness, roundness, curvature, and levelness measures.</description>
  <version>0.1.0.$Revision: 2104 $(alpha)</version>
  <documentation-url>http://public.kitware.com/Wiki/TubeTK</documentation-url>
  <license>Apache 2.0</license>
  <contributor>Stephen R. Aylward (Kitware)</contributor>
  <acknowledgements>This work is part of the TubeTK project at Kitware.</acknowledgements>
  <parameters>
    <label>IO</label>
    <description>Input/output parameters.</description>
    <image>
      <name>inputImageFileName</name>
      <label>Input Image</label>
      <channel>input</channel>
      <index>0</index>
      <description>Input image.</description>
    </image>
    <image>
      <name>ridgeFilename</name>
      <label>Output Image</label>
      <channel>output</channel>
      <index>1</index>
      <description>Output image.</description>
    </image>
    <image>
      <name>roundFilename</name>
      <label>Output Image</label>
      <channel>output</channel>
      <index>2</index>
      <description>Output image.</description>
    </image>
    <image>
      <name>curveFilename</name>
      <label>Output Image</label>
      <channel>output</channel>
      <index>3</index>
      <description>Output image.</description>
    </image>
    <image>
      <name>levelFilename</name>
      <label>Output Image</label>
      <channel>output</channel>
      <index>4</index>
      <description>Output image.</description>
    </image>
  </parameters>
  <parameters>
    <label>Filter</label>
    <double>
      <name>scale</name>
      <label>Ridge scale Standard Deviation</label>
      <description>Standard deviation of the ridge.</description>
      <longflag>scale</longflag>
      <flag>g</flag>
      <default>4.0</default>
    </double>
  </parameters>
</executable>
